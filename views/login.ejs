<% include partials/header %>

    <h1 class="text-center">Login</h1>

    <div class="new-form mx-auto">
        <form action="/login" method="post">
            <div class="form-group">
              <label for="username">Username</label>
              <input type="email" class="form-control" name="username" id="username" aria-describedby="usernameHelp" placeholder="Username" required>
              <small id="usernameHelp" class="form-text text-muted">Enter your email address as your login name.</small>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" id="password" aria-describedby="passwordHelp" placeholder="Password" required>
              <small id="passwordHelp" class="form-text text-muted">Enter a unique, strong password for this site.</small>
            </div>

            <div class="text-center">
            <input type="submit" class="btn btn-primary btn-block" value="Submit">
            <input type="reset" class="btn btn-primary btn-block" value="Reset">
          </div>
        </form>
        <a href="/" class="text-center">Go Home</a>
    </div>

<% include partials/footer %>
